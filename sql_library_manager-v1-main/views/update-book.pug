extends layout

block content

 h1 Update Book 
  if(errors)
    h2.errors Oops an error occurred!
    ul.errors
      each error in errors
        li= error.message

 form(method="POST" action="/books/"+ book.id)
  p
   label(for="title") Title
   input(input name="title" type="text" id="title" value= book.title)
  p
   label(for="author") Author
   input(input name="author" type="text" id="author" value= book.author)
  p
   label(for="genre") Genre
   input(input name="genre" type="text" id="genre" value= book.genre)
  p
   label(for="year") Year
   input(input name="year" type="text" id="year" value= book.year)
  p 
   input(type="submit" value="Update Book") 
 form(method="post" action="/books/" + book.id + "/delete" onsubmit="confirm;")
  p 
   a(class="button" href="/") Cancel 
  p 
   input(type="submit" value="Delete Book")